<Window x:Class="Hotel.ShowAccomodations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="ShowAccomodations" Height="450" Width="800">
    <Grid>
        <ListView Name="myListView1" SelectionChanged="myListView1_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="IDKlienta" DisplayMemberBinding="{Binding IdKlienta}"/>
                    <GridViewColumn Header="IDPokoju" DisplayMemberBinding="{Binding IdPokoju}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="Button_Click2" Content="Wroc" Margin="556,328,55,55"/>
        <Button Click="Button_Click3" Content="Nowe zakwaterowanie" Margin="556,272,55,111"/>
    </Grid>
</Window>
